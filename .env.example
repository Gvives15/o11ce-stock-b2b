# Environment variables for the BFF (Backend For Frontend) project

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
SECRET_KEY=_d%7r!=qt$jkh8m+-f_75vc^0-%!n7_fqx0uh*(@l_h3c-=+i_
DEBUG=0
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL (recommended for production)
DATABASE_URL=postgres://postgres:postgres@db:5432/postgres
CONN_MAX_AGE=60

# PostgreSQL specific settings
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# SQLite (for local development only)
# DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_VERSION=v1

# =============================================================================
# CORS SETTINGS
# =============================================================================
CORS_ALLOW_ALL_ORIGINS=0
# Add specific origins separated by commas
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# B2B BFF CONFIGURATION
# =============================================================================
BFF_VERSION=0.1.0
FE_ORIGIN=http://localhost:5173
CORE_API_BASE_URL=http://localhost:8001/api/v1
CORE_API_TIMEOUT=5
CORE_API_RETRIES=1
CORE_SERVICE_TOKEN=

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# =============================================================================
# STATIC AND MEDIA FILES
# =============================================================================
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# =============================================================================
# SECURITY SETTINGS (set to 1 in production)
# =============================================================================
SECURE_SSL_REDIRECT=0
SESSION_COOKIE_SECURE=0
CSRF_COOKIE_SECURE=0
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=0
SECURE_HSTS_PRELOAD=0

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=15
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_URL=smtp://mailhog:1025
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=0
EMAIL_USE_SSL=0
DEFAULT_FROM_EMAIL=noreply@bff.local

# =============================================================================
# OBSERVABILITY & MONITORING
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Request ID tracking
REQUEST_ID_HEADER=X-Request-ID

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost/api
VITE_SENTRY_DSN=

# =============================================================================
# BUSINESS LOGIC SETTINGS
# =============================================================================
# Stock settings
LOW_STOCK_THRESHOLD_DEFAULT=10
NEAR_EXPIRY_DAYS=7

# Alerts configuration
ALERT_RATE_LIMIT_HOURS=6

# Notifications
WHATSAPP_PROVIDER_URL=http://localhost

# =============================================================================
# RATE LIMITING
# =============================================================================
RATELIMIT_ENABLE=1
RATELIMIT_USE_CACHE=default

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
STRUCTLOG_ENABLE=1

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Django Extensions
DJANGO_EXTENSIONS_ENABLE=1

# Debug Toolbar (only in development)
DEBUG_TOOLBAR_ENABLE=0
